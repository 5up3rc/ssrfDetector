extends layout
block append headExtender
	link(rel='stylesheet', href='/stylesheets/login.css')
	
block content
	form(action="/login", method="post").col-xs-12.col-md-8.col-mg-offset-2.col-lg-4.col-lg-offset-4.text-center#login
		input(type="text" placeholder="Username" name="username").form-control
		input(type="text" placeholder="Password" name="password").form-control
		if errorMessage != false
			div.alert.alert-danger= errorMessage
		input(type="submit" placeholder="Submit").form-control.btn.btn-success
	br
	a(href="/register").col-xs-12.col-md-8.col-mg-offset-2.col-lg-4.col-lg-offset-4.text-center Need an account?