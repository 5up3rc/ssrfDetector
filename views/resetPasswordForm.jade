extends layout
block append headExtender
	link(rel='stylesheet', href='/stylesheets/forms.css')
	
block content
	form(action="/resetPasswordForm", method="post").col-xs-12.col-md-8.col-mg-offset-2.col-lg-4.col-lg-offset-4.text-center#resetPasswordForm
		input(type="password" placeholder="Password" name="password").form-control
		input(type="password" placeholder="Confirm Password" name="passwordConfirm").form-control
		input(type="hidden" name="resetLink" value="#{resetLink}").form-control
		if errorMessage && errorMessage > 1
			div.alert.alert-danger= errorMessage
		input(type="submit" placeholder="Submit").form-control.btn.btn-success
	br
